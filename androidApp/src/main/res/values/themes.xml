<resources>
    <!-- Основная тема приложения -->
    <style name="Theme.MomsHands" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/light_cream</item>
        <item name="colorPrimary">@color/warm_beige</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        <item name="colorSecondary">@color/button_primary</item>
        <item name="colorOnSecondary">@color/text_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:statusBarColor">@color/cream</item>
        <item name="android:navigationBarColor">@color/cream</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="materialAlertDialogTheme">@style/Theme.MomsHands.Dialog</item>
    </style>

    <!-- Диалоги -->
    <style name="Theme.MomsHands.Dialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/button_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
    </style>

    <!-- Тема для MainActivity (без ActionBar) -->
    <style name="Theme.MomsHands.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Шрифты и типографика -->
    <style name="TextAppearance.MomsHands.Headline" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.MomsHands.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.MomsHands.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Стиль подсказки "Следующая грудь" -->
    <style name="TextAppearance.MomsHands.NextHint" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/next_hint_text</item>
    </style>
</resources>