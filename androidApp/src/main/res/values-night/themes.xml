<resources>
    <!-- Темная тема приложения Mom's Hands -->
    <style name="Theme.MomsHands" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Глубокий, тёплый фон — не резкий чёрный -->
        <item name="android:windowBackground">@color/dark_background</item>

        <!-- Цвета акцентов — мягкие, тёплые, не яркие -->
        <item name="colorPrimary">@color/warm_beige_dark</item>
        <item name="colorSecondary">@color/button_primary</item>

        <!-- Текст — светлый, но не белый (менее резкий для глаз) -->
        <item name="android:textColorPrimary">@color/text_primary_night</item>
        <item name="android:textColorSecondary">@color/text_secondary_night</item>

        <!-- Статус-бар и навигация — глубокий тёмный -->
        <item name="android:statusBarColor">@color/dark_surface</item>
        <item name="android:navigationBarColor">@color/dark_surface</item>

        <!-- Отключаем светлый режим для статус-бара -->
        <item name="android:windowLightStatusBar">false</item>

        <!-- Тема для диалогов -->
        <item name="materialAlertDialogTheme">@style/Theme.MomsHands.Dialog</item>
    </style>

    <!-- Диалоги в тёмной теме -->
    <style name="Theme.MomsHands.Dialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/button_primary</item>
        <item name="android:textColorPrimary">@color/text_primary_night</item>
        <item name="android:background">@color/dark_background</item>
    </style>

    <!-- Тема для MainActivity (без ActionBar) -->
    <style name="Theme.MomsHands.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Типографика в тёмной теме -->
    <style name="TextAppearance.MomsHands.Headline" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/text_primary_night</item>
    </style>

    <style name="TextAppearance.MomsHands.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_secondary_night</item>
    </style>

    <style name="TextAppearance.MomsHands.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/text_on_button</item>
    </style>

    <style name="TextAppearance.MomsHands.NextHint" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/next_hint_text_night</item>
    </style>
</resources>