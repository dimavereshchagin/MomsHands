<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Язык и тема">
        <ListPreference
            android:key="pref_language"
            android:title="Язык"
            android:summary="%s"
            android:entries="@array/languages"
            android:entryValues="@array/language_values"
            android:defaultValue="ru" />

        <SwitchPreferenceCompat
            android:key="pref_dark_theme"
            android:title="Тёмная тема"
            android:summary="Сменить внешний вид приложения" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Целевые нормы">
        <Preference
            android:key="pref_target_feeding"
            android:title="Интервал кормления"
            android:summary="мин" />

        <Preference
            android:key="pref_target_sleep"
            android:title="Продолжительность сна"
            android:summary="мин" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Уведомления">
        <SwitchPreferenceCompat
            android:key="pref_enable_feeding_reminders"
            android:title="Напоминания о кормлении"
            android:summary="Подстраивается под ритм ребёнка" />

        <SwitchPreferenceCompat
            android:key="pref_enable_sleep_reminders"
            android:title="Напоминания о сне"
            android:summary="Уведомления перед сном" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Дети">
        <Preference
            android:key="pref_active_child"
            android:title="Активный ребёнок"
            android:summary="Ребёнок 1" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Резервное копирование">
        <Preference
            android:key="pref_backup"
            android:title="Создать резервную копию"
            android:summary="Сохранить данные на устройство" />

        <Preference
            android:key="pref_restore"
            android:title="Восстановить из копии"
            android:summary="Загрузить сохранённые данные" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Информация">
        <Preference
            android:title="Версия приложения"
            android:summary="1.0" />
    </PreferenceCategory>

</PreferenceScreen>